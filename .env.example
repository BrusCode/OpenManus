# ============================================
# OpenManus - Variáveis de Ambiente
# ============================================

# ============================================
# LLM Configuration (OBRIGATÓRIO)
# ============================================
# Modelo de LLM a ser usado
LLM_MODEL=gpt-4o

# URL base da API do LLM
LLM_BASE_URL=https://api.openai.com/v1

# Chave de API do LLM (OBRIGATÓRIO)
LLM_API_KEY=sk-your-api-key-here

# Máximo de tokens na resposta
LLM_MAX_TOKENS=4096

# Temperatura (controla aleatoriedade: 0.0 = determinístico, 1.0 = criativo)
LLM_TEMPERATURE=0.0

# Tipo de API (opcional: openai, azure, aws, ollama)
# LLM_API_TYPE=openai

# ============================================
# Vision Model Configuration (OPCIONAL)
# ============================================
# Se não configurado, usa as mesmas configurações do LLM principal
LLM_VISION_MODEL=gpt-4o
LLM_VISION_BASE_URL=https://api.openai.com/v1
LLM_VISION_API_KEY=sk-your-api-key-here
LLM_VISION_MAX_TOKENS=4096
LLM_VISION_TEMPERATURE=0.0

# ============================================
# Azure OpenAI Configuration (OPCIONAL)
# ============================================
# Descomente se usar Azure OpenAI
# LLM_API_TYPE=azure
# LLM_MODEL=gpt-4o-mini
# LLM_BASE_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment-id
# LLM_API_KEY=your-azure-api-key
# LLM_API_VERSION=2024-08-01-preview

# ============================================
# AWS Bedrock Configuration (OPCIONAL)
# ============================================
# Descomente se usar AWS Bedrock
# LLM_API_TYPE=aws
# LLM_MODEL=us.anthropic.claude-3-7-sonnet-20250219-v1:0
# LLM_BASE_URL=bedrock-runtime.us-west-2.amazonaws.com

# ============================================
# Ollama Configuration (OPCIONAL)
# ============================================
# Descomente se usar Ollama local
# LLM_API_TYPE=ollama
# LLM_MODEL=llama3.2
# LLM_BASE_URL=http://localhost:11434/v1
# LLM_API_KEY=ollama

# ============================================
# Browser Configuration
# ============================================
# Executar navegador em modo headless (sem interface gráfica)
BROWSER_HEADLESS=true

# Desabilitar recursos de segurança do navegador
BROWSER_DISABLE_SECURITY=true

# Argumentos extras para o Chromium (opcional)
# BROWSER_EXTRA_CHROMIUM_ARGS=

# Caminho para instância do Chrome (opcional)
# BROWSER_CHROME_INSTANCE_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome

# Conectar via WebSocket (opcional)
# BROWSER_WSS_URL=

# Conectar via CDP (opcional)
# BROWSER_CDP_URL=

# ============================================
# Browser Proxy Configuration (OPCIONAL)
# ============================================
# BROWSER_PROXY_SERVER=http://proxy-server:port
# BROWSER_PROXY_USERNAME=proxy-username
# BROWSER_PROXY_PASSWORD=proxy-password

# ============================================
# Search Engine Configuration
# ============================================
# Motor de busca padrão (Google, Baidu, DuckDuckGo, Bing)
SEARCH_ENGINE=Google

# Motores de fallback (separados por vírgula)
SEARCH_FALLBACK_ENGINES=DuckDuckGo,Baidu,Bing

# Tempo de espera antes de retentar (segundos)
SEARCH_RETRY_DELAY=60

# Máximo de tentativas
SEARCH_MAX_RETRIES=3

# Código de idioma (en, zh, pt, etc.)
SEARCH_LANG=en

# Código de país (us, cn, br, etc.)
SEARCH_COUNTRY=us

# ============================================
# Sandbox Configuration
# ============================================
# Usar sandbox para execução de código
SANDBOX_USE=false

# Imagem Docker do sandbox
SANDBOX_IMAGE=python:3.12-slim

# Diretório de trabalho no sandbox
SANDBOX_WORK_DIR=/workspace

# Limite de memória
SANDBOX_MEMORY_LIMIT=1g

# Limite de CPU
SANDBOX_CPU_LIMIT=2.0

# Timeout (segundos)
SANDBOX_TIMEOUT=300

# Habilitar rede no sandbox
SANDBOX_NETWORK_ENABLED=true

# ============================================
# MCP (Model Context Protocol) Configuration
# ============================================
# Referência do servidor MCP
MCP_SERVER_REFERENCE=app.mcp.server

# ============================================
# RunFlow Configuration
# ============================================
# Usar agente de análise de dados
RUNFLOW_USE_DATA_ANALYSIS=false

# ============================================
# Logging Configuration
# ============================================
# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Diretório de logs
LOG_DIR=/app/logs

# ============================================
# Application Configuration
# ============================================
# Porta da aplicação (se usar API web)
PORT=8000

# Ambiente (development, production)
ENVIRONMENT=production

# ============================================
# Security
# ============================================
# Secret key para sessões (gere uma chave aleatória)
# SECRET_KEY=your-secret-key-here

# ============================================
# AWS Configuration (se usar Bedrock ou S3)
# ============================================
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_DEFAULT_REGION=us-west-2

# ============================================
# Hugging Face Configuration (OPCIONAL)
# ============================================
# HUGGINGFACE_TOKEN=your-hf-token
